<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATING %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back", restaurant_path(@restaurant), class: "btn btn-primary" %>
    
</div>