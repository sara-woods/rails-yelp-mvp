<div class="container">
  <%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CUISINE %>
    <%= f.input :phone_number %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
</div>

  